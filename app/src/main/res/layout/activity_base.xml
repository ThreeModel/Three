<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deep_orange_background"
    tools:context=".view.activity.BaseActivity">

    <RelativeLayout
        android:id="@+id/base_title"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/base_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="精选"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/base_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/base_caler"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="清除"
            android:textColor="#fff"
            android:textSize="18dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/base_collert"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/collection"
            android:visibility="gone" />

    </RelativeLayout>


    /* 内容视图 */

    <FrameLayout
        android:id="@+id/base_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/base_title"></FrameLayout>

</RelativeLayout>